<% include ./partials/header %>

<div class="ui main text container segment" id="newPic">
    <div class="ui huge header">New Picture</div>
    <form class="ui form" action="/pics" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="pic[title]" placeholder="title">
        </div>
       <div class="field">
            <label>Image</label>
            <input type="text" name="pic[image]" placeholder="image url">
        </div>
         <div class="field">
            <label>Description</label>
            <textarea name="pic[body]"></textarea>
        </div>
        <input class="ui blue big basic button" type="submit">
    </form>
</div>
<% include ./partials/footer %>