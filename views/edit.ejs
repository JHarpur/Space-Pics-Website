<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%=pic.title%></div>
    <form class="ui form" action="/pics/ <%=pic._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="pic[title]" value="<%=pic.title%>">
        </div>
       <div class="field">
            <label>Image</label>
            <input type="text" name="pic[image]" placeholder="<%=pic.image%>">
        </div>
         <div class="field">
            <label>Description</label>
            <textarea name="pic[body]"><%=pic.body%></textarea>
        </div>
        <input class="ui blue big basic button" type="submit">
    </form>
</div>
<% include ./partials/footer %>